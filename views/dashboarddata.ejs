  <script>
      // ใช้ข้อมูลที่ถูกส่งมาจาก Express.js แทนที่ข้อมูล placeholder
    const xValues =  [<%= labels %>];
    const yValues =  [<%= values %>];

    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'line', // แบบของแผนภูมิที่คุณต้องการ
      data: {
        labels: xValues,
        datasets: [{
          label: 'Data',
          data: yValues,
          backgroundColor: 'rgba(75, 192, 192, 0.2)', // สีพื้นหลัง
          borderColor: 'rgba(75, 192, 192, 1)', // สีเส้นกราฟ
          borderWidth: 1
        }]
      },
      options: {
        // ตั้งค่าแผนภูมิตามที่คุณต้องการ
      }
    });

  </script>

