                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <form action="/user/logout" method="post">
                        <button class="btn btn-danger">Logout</button>
                    </form>  
                </div>
            </div>
        </div>
    </div>

