            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-4">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">FUNCTION</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                                <p><strong>Function ID :</strong> <%= ins.id %></p>
                                <p><strong>Function Name :</strong> <%= ins.funcname %></p>    
                                <p><strong>createdAt :</strong> <%= ins.createdAt.toDateString() %> <%= ins.createdAt.toLocaleTimeString() %></p>
                                <p><strong>updatedAt :</strong> <%= ins.updatedAt.toDateString() %> <%= ins.updatedAt.toLocaleTimeString() %></p>
                                
                        </div>
                    </div>
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">COMMAND</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body" style="background-color: black;">
                                <p><b><code style="font-size: 100%;"> <%= ins.func %></code></b></p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">INSTRUMENT</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <p><strong>instrument ID :</strong>     <%= ins.postId %></p>
                            <p><strong>instrument NAME :</strong>     <%= ins.postId %></p>
                            <p><strong>Count :</strong>     <%= ins.count %></p>
                            <p><strong>Port :</strong>     <%= ins.portId %></p>
                            <p><strong>Buadrate :</strong> <%= ins.baudrateId %>  </p>
                        </div>
                    </div>
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">REALTIME</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <%= ins.value%>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">CONTROL</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="form-row">
                                <div class="col-md-auto">
                                    <form action="/home/dashboard/function/<%= ins.id %>" method="POST">
                                        <button class=" btn btn-sm btn-warning shadow-sm" type="submit">Start</button>
                                      </form>       
                                </div>
                                <div class="col-md-auto">
                                    <form action="/home/dashboard/data/<%= ins.id %>" method="GET">
                                        <button class=" btn btn-sm btn-info shadow-sm" type="submit">Visit</button>
                                      </form>       
                                </div>
                                <div class="col-md-auto">
                            <form action="/home/dashboard/delete/data/<%= ins.id%>" method="POST">
                              <button class=" btn btn-sm btn-danger shadow-sm" type="submit">Delete</button>
                            </form>
                                </div>
                                </div>
                            </div>  
                        </div>  
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">EDIT FUNCTION</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <form action="/home/<%= ins.id %>/function/countdata" method="POST">
                                <div class="form-row">
                                    <div class="col-auto">
                                    <input class="form-control" style="width: 60px;" type="number" name="count" id="numberInput" placeholder="<%= ins.count %>" required>
                                </div><div class="col-auto">
                                    <button class=" btn btn-sm btn-primary shadow-sm" type="submit">Count</button>
                            </div>
                            </div>
                            </form> <br>
                            <form Class = "ROW" action="/process" method="post" id="dataForm">
                                <a class=" btn btn-sm btn-primary shadow-sm" type="submit" id="submitButton" >Edit</a>
                                </form>
                           
                            <div id="dataInputContainer" style="display: none;">
                                <% if (ins) { %>   
                                    <form action="/home/<%= ins.id %>/function/edit" method="POST">
                                      <label for="floatingInput">Function Name</label>
                                      <input class="form-control" name="funcname" placeholder="Edit Function Name..."aria-label="Default select example" required></input>
                                      <label for="floatingInput">Command</label>
                                      <textarea  class="form-control" name="func" placeholder="Edit Command..."aria-label="Default select example" required></textarea>                               
                                      <br>
                                      <button type="submit" class=" btn btn-sm btn-primary shadow-sm">Submit</button>    
                                    </form>
                                    <% } %>
                                  </div>
                     
                                  <br>
                            <form action="/home/<%= ins.id %>/function/delete" method="POST">
                              <button class=" btn btn-sm btn-danger shadow-sm" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                   
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-8">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div
                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-primary">DASHBOARD <%= post.id %>.<%= post.title %> <%= ins.id %>.<%= ins.funcname %></h5>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-primary"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                        aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Dropdown :</div>
                        <form method="POST" action="/home/dashboard/function/<%= ins.id %>">
                            <button class=" dropdown-item" type="submit">Action</button>
                        </form>
                        <form method="POST" action="/home/dashboard/delete/data/<%= ins.id%>">
                            <button class=" dropdown-item" type="submit">Delete</button>
                        </form>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/home/dashboard/data/<%= ins.id %>">Visit</a>
                    </div>
                </div>
            </div>
                <!-- Card Body -->
                <div class="card-body">
                    <table style="text-align:center">
                        <tr>
                          <th>ID</th>
                          <th>VALUE</th>
                           <th>CREATED AT</th>
                        </tr>
                        <% ins.values.sort((a, b) => a.id - b.id).forEach(value => { %>
                        <tr>
                             <td><%= value.countId  %></td>
                          <td><%= value.datavalue  %></td>
                          <td><%= value.createdAt.toDateString() %> <%= value.createdAt.toLocaleTimeString() %></td>
                        </tr>
                        <% }); %>
                      </table>
                </div>
            </div>
        </div>
    </div>
            <div class="row">
                <div class="col-xl-12 col-lg-8">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">INSTRUMENT CHART</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <canvas id="myChart" width="300" height="100"></canvas>
                        </div>
                    </div>
             
                </div>
                </div>

    </div>
    <!-- End of Main Content -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
